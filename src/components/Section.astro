---
const { title } = Astro.props;

import { colors } from '@config/styles.json';
const { titlesColor } = colors;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style define:vars={{ titlesColor }}>
  section {
    max-width: 700px;
    margin: 0 auto 48px;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
    color: var(--titlesColor);
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 38px;
    }
  }
</style>
