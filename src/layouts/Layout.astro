---
interface Props {
  title: string;
}

const { title } = Astro.props;

import { aboutMe, settings } from '@config/cv.json';

const { profile, relevantLinks } = aboutMe;
const { link } = profile.avatar;

import { colors } from '@config/styles.json';
const { bgColor, fontColor } = colors;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={profile.title} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content={bgColor} />
    <meta name="geo.region" content={settings.language} />
    <meta name="language" content="es" />
    <meta name="author" content="Miguel Zamora Rey" />
    <!--Facebook meta tags -->
    <meta property="og:title" content={title} />
    <meta property="og:url" content="https://mzrdeveloper.com/" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={profile.title} />
    <meta property="og:image" content={link} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="1200" />

    <!--Tritter meta tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="https://mzrdeveloper.com" />
    <meta property="twitter:url" content="https://mzrdeveloper.com/" />
    <meta name="twitter:image" content={link} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global define:vars={{ bgColor, fontColor }}>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      'Courier New',
      Courier,
      monospace;
    background: var(--bgColor);
    letter-spacing: -0.02rem;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul,
  li {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }

  p {
    color: var(--fontColor);
    font-size: 0.8rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }
</style>
